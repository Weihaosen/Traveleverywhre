<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/dr"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="compp.cumulus.traveleverywhre.activity.HollActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <android.support.v7.widget.Toolbar
            android:id="@+id/to"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <ImageView
                android:layout_marginTop="@dimen/dp_5"
                android:id="@+id/img_na"
                android:background="@mipmap/wechat"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30" />
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_280"
                android:src="@drawable/duan" />
        </android.support.v7.widget.Toolbar>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <android.support.design.widget.TabLayout
        android:id="@+id/ta"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:background="@color/c_50FFFFFF" />
</LinearLayout>
    <android.support.design.widget.NavigationView
        android:background="@color/white"
        android:id="@+id/na"
        android:layout_gravity="left"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/headerlayout"/>
    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
