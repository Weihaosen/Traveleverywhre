        android:layout_height="match_parent">
    <compp.cumulus.traveleverywhre.widget.CircleImageView
        android:id="@+id/img_touxiang"
        android:scaleType="centerCrop"
        android:src="@drawable/tt"
        android:layout_marginLeft="@dimen/dp_21"
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_52" />
        <TextView
            android:id="@+id/te_mingzi"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/c_373737"
            android:text="@string/Bylogginginorregistering"
            android:layout_marginLeft="@dimen/dp_93"
            android:layout_marginTop="@dimen/dp_10"
            android:maxLength="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/te_zhiye"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_636363"
            android:text="@string/conn_error"
            android:layout_marginLeft="@dimen/dp_93"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/te_shi"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/c_999999"
            android:text="北极狐"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_nei"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:layout_alignTop="@+id/re_cir"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_72">
            <TextView
                android:id="@+id/te_jieshao"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_200"
                android:text="@string/conn_error" />
        </RelativeLayout>
