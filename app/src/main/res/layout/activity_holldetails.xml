            android:id="@+id/re"
            android:layout_alignTop="@+id/re_nei"
            android:layout_marginTop="@dimen/dp_220"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
