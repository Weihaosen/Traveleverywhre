<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="compp.cumulus.traveleverywhre.activity.GuidanceActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <compp.cumulus.traveleverywhre.widget.PreviewIndicator
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_43"
        android:id="@+id/indicator"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:visibility="gone"
        android:textColor="@color/c_FFFFFF"
        android:textSize="@dimen/sp_16"
        android:id="@+id/btn_tiao"
        android:text="立即体验"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_46"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_me"
        android:layout_width="@dimen/dp_127"
        android:layout_height="@dimen/dp_40" />

</RelativeLayout>
