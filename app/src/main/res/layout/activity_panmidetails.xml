<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="compp.cumulus.traveleverywhre.activity.PanmidetailsActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/to"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <ImageView
            android:id="@+id/img_back"
            android:background="@drawable/back_white"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25" />
        <TextView
            android:layout_marginLeft="@dimen/dp_130"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_16"
            android:text="伴米详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/img_fenxiianng"
            android:layout_marginLeft="@dimen/dp_100"
            android:background="@drawable/share"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25" />
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/ca"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_50"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/img_touxiang"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_160"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10" />

                <TextView
                    android:id="@+id/te_mingzi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_160"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/banbenceshi"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_22" />

                <TextView
                    android:id="@+id/te_guanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_160"
                    android:layout_marginTop="@dimen/dp_45"
                    android:text="@string/banbenceshi"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/img_xin"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_18"
                    android:layout_marginLeft="@dimen/dp_300"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/follow" />

                <TextView
                    android:id="@+id/te_xinguanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_290"
                    android:layout_marginTop="@dimen/dp_35"
                    android:text="@string/agentweb_cancel"
                    android:textColor="@color/c_999999" />

                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_150"
                    android:layout_marginTop="@dimen/dp_120"
                    android:background="@mipmap/ding" />

                <TextView
                    android:id="@+id/te_dizhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_170"
                    android:layout_marginTop="@dimen/dp_118"
                    android:text="@string/srl_footer_finish"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_150"
                    android:layout_marginTop="@dimen/dp_150"
                    android:background="@mipmap/ding" />

                <TextView
                    android:id="@+id/te_zuozhe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_170"
                    android:layout_marginTop="@dimen/dp_145"
                    android:text="@string/srl_footer_finish"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/te_jieshao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_180" />

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_below="@+id/ca">
                <android.support.design.widget.TabLayout
                    android:id="@+id/ta"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginLeft="@dimen/dp_100"
                    android:layout_marginRight="@dimen/dp_100"/>
                <android.support.v4.view.ViewPager
                    android:id="@+id/vi"
                    android:layout_marginTop="@dimen/dp_50"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_720" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
