<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
       app:cardCornerRadius="@dimen/dp_10"
       app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/dp_5"
        app:cardPreventCornerOverlap="false" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120">

            <ImageView
                android:id="@+id/tu"
                android:scaleType="fitXY"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_120" />
            <ImageView
                android:id="@+id/xin"
                android:layout_marginLeft="@dimen/dp_260"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/follow_unselected"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20" />
            <TextView
                android:id="@+id/mingzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="@dimen/dp_120"
                android:layout_marginTop="18dp"
                android:layout_toEndOf="@+id/tu"
                android:maxLength="3"
                android:text="@string/app_name"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_22" />
            <TextView
                android:id="@+id/guanzhu"
                android:layout_marginTop="@dimen/dp_52"
                android:layout_toEndOf="@+id/tu"
                android:text="@string/app_name"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/ding"
                android:layout_marginTop="@dimen/dp_75"
                android:layout_toEndOf="@+id/tu"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12" />/>
            <TextView
                android:id="@+id/dizhi"
                android:layout_marginTop="@dimen/dp_72"
                android:layout_toEndOf="@+id/tu"
                android:text="@string/app_name"
                android:layout_marginLeft="@dimen/dp_30"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@mipmap/ding"
                android:layout_marginTop="@dimen/dp_95"
                android:layout_toEndOf="@+id/tu"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12" />/>
            <TextView
                android:id="@+id/zuozhe"
                android:layout_marginTop="@dimen/dp_92"
                android:layout_toEndOf="@+id/tu"
                android:text="@string/app_name"
                android:maxLength="10"
                android:layout_marginLeft="@dimen/dp_30"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>